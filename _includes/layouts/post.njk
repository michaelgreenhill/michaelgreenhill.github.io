<!DOCTYPE html>
<html lang="en">
  <head>

    {% include 'etc/_htmlmeta.njk' %}

    <link rel="canonical" href="{{ site.url }}/{{ title | slug }}/"/>

    <meta property="og:site_name" content="{{ site.title }}"/>
    <meta property="og:type" content="article"/>
    <meta property="og:title" content="{{ title }}"/>
    <meta property="og:description" content="{{ subtitle }}"/>
    <meta property="og:url" content="{{ site.url }}/{{ title | slug }}/"/>
    <meta property="og:image" content="{{ heroimage }}"/>
    <meta property="article:published_time" content="2020-02-22T04:58:36.000Z"/>
    <meta property="article:modified_time" content="2020-02-22T04:58:36.000Z"/>
    <meta property="article:tag" content="it"/>
    <meta property="article:tag" content="ddos"/>
    <meta property="article:tag" content="nginx"/>

    <meta property="article:publisher" content="{{ site.social.facebook }}"/>
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content="{{ title }}"/>
    <meta name="twitter:description" content="{{ subtitle }}"/>
    <meta name="twitter:url" content="{{ site.url }}/{{ title | slug }}/"/>
    <meta name="twitter:image" content="{{ heroimage }}"/>
    <meta name="twitter:label1" content="Written by"/>
    <meta name="twitter:data1" content="{{ post.author.name }}"/>
    <meta name="twitter:label2" content="Filed under"/>
    <meta name="twitter:data2" content="it, ddos, nginx"/>
    <meta property="og:image:width" content="1280"/>
    <meta property="og:image:height" content="919"/>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Article",
        "publisher": {
          "@type": "Organization",
          "name": "{{ author.name }}",
          "logo": {
            "@type": "ImageObject",
            "url": "{{ site.url }}/favicon.ico",
            "width": 48,
            "height": 48
          }
        },
        "author": {
          "@type": "Person",
          "name": "{{ author.name }}",
          "image": {
            "@type": "ImageObject",
            "url": "{{ author.photo }}",
            "width": 500,
            "height": 500
          },
          "url": "{{ site.url }}/author/michael/",
          "sameAs": []
        },
        "headline": "{{ title }}",
        "url": "{{ site.url }}/{{ title | slug }}/",
        "datePublished": "2020-02-22T04:58:36.000Z",
        "dateModified": "2020-02-22T04:58:36.000Z",
        "image": {
          "@type": "ImageObject",
          "url": "{{ heroimage }}",
          "width": 1280,
          "height": 919
        },
        "keywords": "it, ddos, nginx",
        "description": "{{ subtitle }}",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "{{ site.url }}/"
        }
      }
    </script>

  </head>
  <body class="post-template">

    <div class="site-wrapper">

      <header class="site-header">
        <div class="outer site-nav-main">
          <div class="inner">
            {% include 'etc/_menu.njk' %}
          </div>
        </div>
      </header>

      <main id="site-main" class="site-main outer">
        <div class="inner">
          <article class="post-full post">
            <section class="post-full-content">
              <div class="post-header">
                <h1>{{ renderData.title or title or metadata.title }}</h1>

                {% set tagslist = tags %}
                {% include "etc/_tags.njk" %}
                <span class="reading-time">About {{ content | readingTime }} reading time</span>

              </div>

              {% if heroimage %}
              <div class="heroimage"><img src="{{ heroimage }}"></div>
              {% endif %}

              <aside class="post-aside">
                <strong>Contents</strong>
                {{ content | toc | safe }}
              </aside>
              <div class="post-content">
                <p class="subtitle">{{ subtitle }}</p>
                {{ content | safe }}
              </div>
            </section>
          </article>
        </div>
      </main>

      <aside class="read-next outer"></aside>

      {% include 'etc/_footer.njk' %}

    </div>
  </body>
</html>